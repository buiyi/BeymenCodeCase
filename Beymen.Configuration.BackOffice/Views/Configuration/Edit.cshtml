@model Beymen.Configuration.BackOffice.Models.ConfigurationModel
@{
    ViewData["Title"] = "Edit Configuration";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Edit" class="form-horizontal">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Value" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Value" class="form-control" rows="5"></input>
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="IsActive" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="IsActive" type="checkbox" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ApplicationName" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ApplicationName" class="form-control" />
            <span asp-validation-for="ApplicationName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-default">Back to List</a>
        </div>
    </div>
</form>
